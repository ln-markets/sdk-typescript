{
  "files.exclude": {
    "**/.git": true,
    "**/.cache": true,
    "**/reports": true,
    "**/coverage": true,
    "**/cache": true,
    "**/*.tsbuildinfo": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.cache": true,
    "**/reports": true,
    "**/coverage": true,
    "**/cache": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/*.tsbuildinfo": true,
    "pnpm-lock.yaml": true
  },
  // Editor Config
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.formatDocument": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  // Language Config
  "css.validate": false,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.useFlatConfig": true,
  "typescript.tsdk": "./node_modules/typescript/lib"
}
